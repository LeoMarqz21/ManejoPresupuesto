@model PaginacionRespuesta

@{
    var plantillaLink = string.Concat(Model.BaseUrl, "?pagina={0}&recordsPorPagina={1}");
    var anterior = (Model.Pagina - 1) > 1 ? Model.Pagina - 1 : 1;
    var siguiente = (Model.Pagina + 1) <= Model.CantidadTotalDePaginas
    ? Model.Pagina + 1 : Model.CantidadTotalDePaginas;
}

<nav>
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="@string.Format(plantillaLink, anterior, Model.RecordsPorPagina)">
               < Anterior
            </a>
        </li>
        @for (int pagina = 1; pagina <= Model.CantidadTotalDePaginas; pagina++)
        {
            <li class="page-item @(pagina == Model.Pagina ? "active" : null)">
                <a class="page-link" href="@string.Format(plantillaLink, pagina, Model.RecordsPorPagina)">
                    @pagina
                </a>
            </li>
        }
        <li class="page-item">
            <a class="page-link " href="@string.Format(plantillaLink, siguiente, Model.RecordsPorPagina)">
                Siguiente >
            </a>
        </li>
    </ul>
</nav>

